<!DOCTYPE html>
<html ng-app="MovieApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/ngApp/app.js"></script>
    <script>
        
    </script>
</head>
<body ng-controller="MovieListController as mlc">
    
    <input class="form-control" ng-model="newMovie" />
    <div class="btn btn-default" ng-click="mlc.addNewMovie(newMovie)">Add New Movie</div>
    {{mlc.movies}}
    <ul>
       <li ng-repeat="movie in mlc.movies">{{movie}}</li>
    </ul>

    @Scripts.Render("~/bundles/jquery")
</body>
</html>
